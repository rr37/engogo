<!-- Modal -->
<div
  class='modal fade'
  id='journalModal'
  data-bs-backdrop='static'
  tabindex='-1'
  aria-labelledby='exampleModalLabel'
  aria-hidden='true'
>
  <div
    class='modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable'
    style=''
  >
    <form id='saveJournalForm' action='' method='POST'>
      <div
        class='modal-content d-flex flex-row'
        style='background-color:#fff8eb; border-radius: 30px; height: 90vh; overflow: hidden;'
      >

        {{! 時間 & 天氣}}
        <div
          class='col-sm-6 col-md-5 col-lg-4 p-2 ps-4 pe-4'
          style='position: absolute; background-color:rgba(242, 160, 37, 0.44);border-radius:0 0 20px 0'
        >
          <div
            class='color-white d-flex flex-column'
            style='text-align:start; font-size:1.7em; font-weight:600'
          >
            {{! 時間}}
            <div id='journalCreatedDate'></div>
            <div class='d-flex align-items-center'>
              {{! 天氣}}
              <div style='font-size:0.8em'>天氣：</div>
              <select
                id='weatherSelect'
                class='form-select'
                aria-label='Default select example'
                name='weather'
                style='width: 50%;'
              >
                <option value='' selected>請選擇</option>
                <option value='晴朗'>晴朗</option>
                <option value='霧霾'>霧霾</option>
                <option value='局部多雲'>局部多雲</option>
                <option value='多雲'>多雲</option>
                <option value='毛毛雨'>毛毛雨</option>
                <option value='雷雨'>雷雨</option>
                <option value='豪雨'>豪雨</option>
                <option value='下雪'>下雪</option>
                <option value='大雪'>大雪</option>
              </select>
            </div>

          </div>
        </div>
        {{! 取消＆儲存按鈕 }}
        <div style='position:absolute;bottom: 2%;right: 3%;'>
          <button
            id='closeJournalModalBtn'
            type='button'
            class='btn btn-secondary me-2'
            data-bs-dismiss='modal'
            style='background-color: #BFBFBF; border:#BFBFBF;'
          >Close</button>
          <button
            id='saveJournalBtn'
            type='submit'
            class='btn btn-primary'
            style='background-color: #f2a025; border:#f2a025'
          >Save changes</button>
        </div>
        {{! Modal 左欄}}
        <div
          class='col-sm-6 col-md-5 col-lg-4 d-flex flex-column align-items-center justify-content-end p-5 ps-0 pe-0 pb-2'
        >

          {{! 能力值 }}
          <div class='col-8'>
            <canvas></canvas>
            {{! 要回傳後端的能力指標值不渲染 }}
            <div hidden>
              <input id='listenInput' name='listen' type='number' />
              <input id='speakInput' name='speak' type='number' />
              <input id='readInput' name='read' type='number' />
              <input id='writeInput' name='write' type='number' />
              <input id='thinkInput' name='think' type='number' />
            </div>
          </div>

          {{! 卡牌}}
          <figure class='modal-card col-9'>
            <div class='d-flex align-items-center modal-card-info'>
              <div id='cardId' class='modal-card-id'></div>
              <div id='cardMission' class='modal-card-mission'></div>
            </div>
            <img
              id='cardImageSrc'
              src=''
              style='object-fit: cover;width:100%;'
            />
          </figure>
        </div>
        {{! Modal 右欄}}
        <div
          class='col-sm-6 col-md-7 col-lg-8 pt-5 d-flex flex-column justify-content-start align-items-center'
          style='overflow-y: scroll;'
        >
          {{! 問題 }}
          {{! Q1 }}
          <div class='modal-Q col-11' style='min-height: 25vh;'>
            <div class='d-flex align-items-start ps-2'>
              <div
                style='font-size: 30px; font-weight: 500; color:#f2a025'
              >Q1</div>
              <div
                class='d-flex flex-column justify-content-center ps-2 mt-2'
                style='width:100%;height:100%'
              >
                <div>我在這一張卡牌中做了什麼呢？</div>
                <textarea
                  id='q1TextArea'
                  class='mt-1 modal-textarea'
                  name='q1'
                  placeholder='我做了......'
                ></textarea>
              </div>
            </div>
          </div>
          {{! Q2 }}
          <div class='modal-Q col-11' style='min-height: 25vh;'>
            <div class='d-flex align-items-start ps-2'>
              <div
                style='font-size: 30px; font-weight: 500; color:#f2a025'
              >Q2</div>
              <div
                class='d-flex flex-column justify-content-center ps-2 mt-2'
                style='width:100%;height:100%'
              >
                <div>完成任務之後，我有什麼感受呢？</div>
                <textarea
                  id='q2TextArea'
                  name='q2'
                  class='mt-1 modal-textarea'
                  placeholder='我覺得......'
                ></textarea>
              </div>
            </div>
          </div>
          {{! Q3 }}
          <div class='modal-Q col-11' style='min-height: 25vh;'>
            <div class='d-flex align-items-start ps-2'>
              <div
                style='font-size: 30px; font-weight: 500; color:#f2a025'
              >Q3</div>
              <div
                class='d-flex flex-column justify-content-center ps-2 mt-2'
                style='width:100%;height:100%'
              >
                <div>我想對＿＿＿＿＿説的一句話...</div>
                <textarea
                  id='q3TextArea'
                  name='q3'
                  class='mt-1 modal-textarea'
                  placeholder='我想對...説...'
                ></textarea>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>